            <ee:variables>
                <ee:set-variable variableName="studentID">attributes.uriParams.'studentID'</ee:set-variable>
                <ee:set-variable variableName="studentName">attributes.uriParams.'studentName'</ee:set-variable>
            </ee:variables>
        </ee:transform>
        <ee:transform xsi:schemaLocation="http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  message: "Student added successfully!"
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
    <flow name="post:\students\(studentID)\(studentName):application\xml:students-api-config">
        <ee:transform>
